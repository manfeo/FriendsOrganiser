<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_appointmentPhotoHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100sp"
        android:layout_margin="10sp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_appointmentPhoto"
            android:layout_width="60sp"
            android:layout_height="60sp"
            app:srcCompat="@drawable/avatar"
            android:contentDescription="@string/no_image_found" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_appointmentTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Праздник)"
        android:layout_marginStart="10sp"
        app:layout_constraintTop_toTopOf="@+id/cv_appointmentPhotoHolder"
        app:layout_constraintStart_toEndOf="@+id/cv_appointmentPhotoHolder"/>

    <TextView
        android:id="@+id/tv_appointmentDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="10sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>