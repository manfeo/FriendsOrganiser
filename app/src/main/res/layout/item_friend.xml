<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginTop="10sp">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_friendPhotoHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="100sp"
        app:cardPreventCornerOverlap="false">

        <ImageView
            android:id="@+id/iv_friendPhoto"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:scaleType="centerInside"
            android:src="@drawable/avatar"
            android:contentDescription="@string/no_image_found" />
    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/tv_friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/cv_friendPhotoHolder"
        android:layout_marginTop="15sp"
        android:layout_marginLeft="15sp"
        android:text="Олег Муканов" />

</RelativeLayout>