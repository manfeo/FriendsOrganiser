<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_friendPhotoHolder"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        app:cardCornerRadius="100sp"
        app:cardPreventCornerOverlap="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:id="@+id/iv_friendPhoto"
            android:layout_width="50sp"
            android:layout_height="50sp"
            android:scaleType="centerInside"
            android:src="@drawable/avatar"
            android:contentDescription="@string/no_image_found" />
    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/tv_friendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Олег Муканов"
        android:textSize="16sp"
        android:layout_marginStart="10sp"
        app:layout_constraintTop_toTopOf="@+id/cv_friendPhotoHolder"
        app:layout_constraintBottom_toBottomOf="@+id/cv_friendPhotoHolder"
        app:layout_constraintStart_toEndOf="@+id/cv_friendPhotoHolder"/>

</androidx.constraintlayout.widget.ConstraintLayout>