<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivityPackage.AppointmentsPackage.AddressPicker.AddressPickerActivity">

    <org.osmdroid.views.MapView
        android:id="@+id/mv_map"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

    <ImageButton
        android:id="@+id/ib_newAppointmentCancelMap"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:adjustViewBounds="true"
        android:padding="10sp"
        android:scaleType="fitCenter"
        android:background="@android:color/transparent"
        android:contentDescription="@string/no_image_found"
        app:srcCompat="@drawable/cancel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_searchAddress"
        app:layout_constraintBottom_toBottomOf="@+id/et_searchAddress"
        app:layout_constraintStart_toEndOf="@+id/et_searchAddress"/>

    <EditText
        android:id="@+id/et_searchAddress"
        android:layout_width="wrap_content"
        android:layout_height="48sp"
        android:ems="13"
        android:padding="10sp"
        android:maxLines="1"
        android:imeOptions="actionSearch"
        android:background="@drawable/map_search"
        android:inputType="text"
        android:hint="Поиск..."
        android:layout_marginTop="5sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <Button
        android:id="@+id/bt_newAppointmentConfirmAddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="10sp"
        android:text="Задать"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <ImageButton
        android:id="@+id/bt_clearAllMarkers"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:scaleType="fitCenter"
        android:contentDescription="@string/no_image_found"
        app:srcCompat="@drawable/search_result"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/et_searchAddress"
        app:layout_constraintBottom_toBottomOf="@+id/et_searchAddress"
        app:layout_constraintEnd_toStartOf="@+id/et_searchAddress"/>
</androidx.constraintlayout.widget.ConstraintLayout>