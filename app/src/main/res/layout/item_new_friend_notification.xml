<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10sp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/iv_newFriendPhoto"
        android:layout_width="48sp"
        android:layout_height="48sp"
        android:src="@drawable/avatar"
        android:contentDescription="@string/no_image_found" />

    <TextView
        android:id="@+id/tv_newFriendName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/iv_newFriendPhoto"
        android:padding="5sp"
        android:layout_marginLeft="5sp"
        android:text="TextView" />

    <Button
        android:id="@+id/bt_rejectNewFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginTop="15sp"
        android:text="Отклонить" />

    <Button
        android:id="@+id/bt_acceptNewFriend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@+id/bt_rejectNewFriend"
        android:layout_marginTop="15sp"
        android:text="Принять" />
</RelativeLayout>